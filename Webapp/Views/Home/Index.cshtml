@{
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body ng-app="app" ng-controller="mainCtrl as control">
	<div id="container">

		<div class="value x{{item.x}} y{{item.y}}" ng-repeat="item in items">[{{item.x}}-{{item.y}}]={{item.v}}</div>

		<table ng-keydown="console.log($event)" ng-init="line=[1, 2, 3, 4]">
			<tr ng-repeat="square in line">
				<td ng-repeat="square in line"></td>
			</tr>
		</table>
		<div class="commands" ng-init="directions=[{t:'left', v:'◄'}, {t:'right', v:'►'}, {t:'up', v:'▲'}, {t:'down', v:'▼'}]">
			<input type="button" ng-repeat="dir in directions" value="{{dir.v}}" ng-click="globalMove(dir.t);" />


			<input type="text" value="" ng-model="newX" class="smallInput" />
			<input type="text" value="" ng-model="newY" class="smallInput" />
			<input type="text" value="" ng-model="newV" class="smallInput" />
			<input type="button" value="ajout" ng-click="addValue(newX, newY, newV)" />
		</div>
	</div>


	<script src="~/js/bower_components/angular/angular.js"></script>
	<script src="~/js/bower_components/angular/angular-animate.js"></script>
	<script src="~/js/app.js"></script>
</body>
</html>
