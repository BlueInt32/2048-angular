@{
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body ng-app="app" ng-controller="mainCtrl as control">
	<table ng-keydown="console.log($event)">
		<tr>
			<td>{{val[0][0] | zeroEmpty}}</td>
			<td>{{val[1][0] | zeroEmpty}}</td>
			<td>{{val[2][0] | zeroEmpty}}</td>
			<td>{{val[3][0] | zeroEmpty}}</td>
		</tr>
		<tr>
			<td>{{val[0][1] | zeroEmpty}}</td>
			<td>{{val[1][1] | zeroEmpty}}</td>
			<td>{{val[2][1] | zeroEmpty}}</td>
			<td>{{val[3][1] | zeroEmpty}}</td>
		</tr>
		<tr>
			<td>{{val[0][2] | zeroEmpty}}</td>
			<td>{{val[1][2] | zeroEmpty}}</td>
			<td>{{val[2][2] | zeroEmpty}}</td>
			<td>{{val[3][2] | zeroEmpty}}</td>
		</tr>
		<tr>
			<td>{{val[0][3] | zeroEmpty}}</td>
			<td>{{val[1][3] | zeroEmpty}}</td>
			<td>{{val[2][3] | zeroEmpty}}</td>
			<td>{{val[3][3] | zeroEmpty}}</td>
		</tr>
	</table>

	<div class="command">
		<input type="button" value="G" ng-click="globalMove('left');" />
		<input type="button" value="D" ng-click="globalMove('right');" />
		<input type="button" value="H" ng-click="globalMove('up');" />
		<input type="button" value="B" ng-click="globalMove('down');" />
	</div>
	<script src="~/js/bower_components/angular/angular.js"></script>
	<script src="~/js/app.js"></script>
</body>
</html>
